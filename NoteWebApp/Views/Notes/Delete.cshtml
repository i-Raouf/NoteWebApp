@model Note
@{
    ViewData["Title"] = "Create";
}

<h1>Delete note</h1>
<hr />

<form method="post" asp-action="Delete">
    <input asp-for="Id" type="hidden" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" disabled type="text" class="form-control" id="title">
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for=Content disabled class="form-control" style="height: 200px"></textarea>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Notes" asp-action="index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}